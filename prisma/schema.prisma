// Prisma schema for Auth.js v5 with PrismaAdapter and a Role field

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  role          Role     @default(USER)
  // Credentials auth password
  passwordHash  String?

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  USER
}

model ContentSection {
  id        String   @id @default(cuid())
  // Unique key for the section, e.g., "productsHeader", "productOverviewHeader", "marketsHeader", "customersHeader", "hero"
  key       String   @unique
  // Arbitrary JSON payload for the section content (kicker, title, subtitle, imageUrl, etc.)
  data      Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
